#imposto = 0.1 = 10% || imposto = 0.075 = 7.5%
import os
import time
os.system("clear")

# Declarando Variáveis.

salarioBase = []
valorDesconto = 0.0
salarioLiquido = 0.0

# Declarando Funções.

def logoEmpresa():
    os.system("clear")
    print("=== JefPin Industries ===")

def opcao1():
    matricula = input("Informe Sua Matrícula: ")
    senha = input("Digite sua Senha: ")
    print("Registrando...") 
    time.sleep(1)
    print(f"\nSeja Bem-vindo {matricula}")
    time.sleep(2)
    os.system("clear")
    
def opcao2():
    salarioBase = float(input("Informe seu Salário R$ "))
    os.system("clear")
    
    
def opcao3(salarioLiquido):
    valeTrasnporte = input("Deseja receber o vale transporte? (s/n): ")
    
    if valeTrasnporte == 's':
        desconto_transporte = salarioBase * 0.06
        salarioLiquido -= desconto_transporte
    elif valeTrasnporte == 'n':
        print("Ok")
    
    print(f"Seu Salário atual com desconto aplicado: ",salarioLiquido)
    time.sleep(3)
    os.system("clear")
    return salarioLiquido
    
def opcao4():
    valeRefeicao = float(input("Qual o valor do Vale Refeição? "))
        
    
def opcao5():
    
    print("s")
    
    
def opcao6():
    print("s")
        
            
        
        
        
def inss():
    print("s")
    

def menu():
    print("\n=== Sistema de Folha de Pagamento ===\n")
    print("1 - Solicitar matrícula e senha para ter acesso aos seus dados")
    print("2 - Solicitar o salário base")
    print("3 - Vale transporte")
    print("4 - Vale refeição")
    print("5 - Calcular os descontos e acréscimos na folha de pagamento")
    print("6 - Salário líquido após os descontos e acréscimos")
    
while True:
    menu()
    selecionando = int(input("Selecione Uma Opção Acima: "))
    os.system("clear")
    
    if selecionando == 1:
        opcao1()
    elif selecionando == 2:
        opcao2()
    elif selecionando == 3:
        opcao3(salarioLiquido)
    elif selecionando == 4:    
        opcao4()
    elif selecionando == 5:
        opcao5()
    elif selecionando == 6:
        opcao6()
    else:
        print("")
        

